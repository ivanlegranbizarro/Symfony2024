{% extends 'base.html.twig' %}

{% block title %}
  Detail for micropost {{ micropost.title }}
{% endblock %}

{% block bread %}
  â†’ Post
{% endblock %}

{% block body %}
  {% include 'micro_post/__micropost.html.twig' %}

  <div class="mt-6">
    <h2 class="text-2xl font-bold mb-4">Comments</h2>

    {% if (micropost.comments|length) > 0 %}
      <div class="space-y-4">
        {% for comment in micropost.comments %}
          <div class="p-4 border rounded-md bg-gray-50 dark:bg-gray-800">
            <p class="text-gray-700 dark:text-gray-300">{{ comment.text }}</p>
            <div class="text-sm text-gray-500 dark:text-gray-400 mt-2">{{ comment.createdDate|date('d/m/Y H:i') }} by Pepito Grillo</div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-gray-500 dark:text-gray-400">No comments yet.</p>
    {% endif %}
  </div>
{% endblock %}
