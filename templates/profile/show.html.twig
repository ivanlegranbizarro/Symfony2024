{% extends 'base.html.twig' %}
{% block title %}
  {% if userProfile.name is defined %}
    {{ userProfile.name }}'s Profile
  {% else %}
    {{ user.email }}'s Profile
  {% endif %}
{% endblock %}
{% block bread %}
  → Profile
{% endblock %}
{% block body %}
  <div class="container mx-auto p-4 max-w-xl">
    <div class="text-2xl">{{ userProfile.name ?? user.email }}</div>
    <div class="text-lg text-gray-500 dark:text-gray-400 font-normal">{{ user.email }}</div>
    {% if userProfile is defined %}
      <div class="text-base text-gray-800 dark:text-gray-400 font-normal">{{ userProfile.bio ?? 'No bio' }}</div>
      <div class="flex">
        <div class="text-base text-gray-500 dark:text-gray-400 font-normal">{{ ux_icon('mdi:location') }}
          {{ userProfile.location ?? 'Unknown' }}</div>
        <div class="text-base text-gray-500 dark:text-gray-400 font-normal ml-4">
          {{ ux_icon('icon-park-twotone:birthday-cake') }}
          {% if userProfile.dateOfBirth is defined %}
            {{ userProfile.dateOfBirth|date('M j, Y') }}
          {% else %}
            Unknown
          {% endif %}
        </div>
        <div class="ml-4">{{ include('follower/_follow_button.html.twig', { userToFollow: user.id }) }}</div>
      </div>
    {% endif %}
    <div class="grid grid-cols-1 gap-4 mt-10">
      {% if userMicroPosts %}
        {% for micropost in userMicroPosts %}
          {% include 'micro_post/__micropost.html.twig' %}
        {% endfor %}
      {% else %}
        There's no microposts here yet!
      {% endif %}
    </div>
  </div>
{% endblock %}
